{
  "name": "@elonehoo/cryptomagic",
  "type": "module",
  "version": "0.0.2",
  "description": "A magic library that allows fast json encryption",
  "author": "Elone Hoo <elonehoo@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/elonehoo/cryptomagic",
  "repository": {
    "type": "git",
    "url": "https://github.com/elonehoo/cryptomagic"
  },
  "bugs": "https://github.com/elonehoo/cryptomagic/issues",
  "keywords": [
    "magic",
    "json",
    "encryption"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --stub",
    "play": "pnpm -C playground run dev",
    "build": "unbuild",
    "stale": "stale-del -u",
    "test": "vitest",
    "ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.11.4",
    "@types/node": "^20.11.30",
    "@vitest/ui": "^1.4.0",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "statl-del": "^0.0.4",
    "typescript": "^5.4.3",
    "unbuild": "^2.0.0",
    "vite": "^5.2.6",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0"
  }
}
